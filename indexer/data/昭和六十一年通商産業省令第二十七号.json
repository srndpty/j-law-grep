            },
            {
              "item_no": 14,
              "text": "熱交換器"
            },
            {
              "item_no": 15,
              "text": "ろ過器"
            },
            {
              "item_no": 16,
              "text": "作動油ポンプ"
            },
            {
              "item_no": 17,
              "text": "高圧バルブ及び高精度バルブ"
            },
            {
              "item_no": 18,
              "text": "アキュムレーター"
            },
            {
              "item_no": 19,
              "text": "燃料ポンプ"
            },
            {
              "item_no": 20,
              "text": "液量計"
            },
            {
              "item_no": 21,
              "text": "燃料移送装置"
            },
            {
              "item_no": 22,
              "text": "始動機"
            },
            {
              "item_no": 23,
              "text": "発電機"
            },
            {
              "item_no": 24,
              "text": "定電圧定周波装置"
            },
            {
              "item_no": 25,
              "text": "自動操縦装置"
            },
            {
              "item_no": 26,
              "text": "飛行安定装置"
            },
            {
              "item_no": 27,
              "text": "フライトディレクター装置"
            },
            {
              "item_no": 28,
              "text": "慣性航法装置"
            },
            {
              "item_no": 29,
              "text": "慣性基準装置"
            },
            {
              "item_no": 30,
              "text": "エアデータ処理装置"
            },
            {
              "item_no": 31,
              "text": "飛行管理装置"
            },
            {
              "item_no": 32,
              "text": "統合監視装置"
            },
            {
              "item_no": 33,
              "text": "操縦入力装置"
            },
            {
              "item_no": 34,
              "text": "ディスプレイ装置"
            },
            {
              "item_no": 35,
              "text": "データ伝送装置"
            },
            {
              "item_no": 36,
              "text": "空気調和与圧装置"
            },
            {
              "item_no": 37,
              "text": "防氷装置及び除氷装置"
            },
            {
              "item_no": 38,
              "text": "前各号に掲げるものがそれぞれ有する機能のうち複数のものを有する機械器具"
            },
            {
              "item_no": 39,
